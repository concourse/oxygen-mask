---
image_resource:
  type: registry-image
  source:
    repository: buildpack-deps
    tag: trusty

params:
  DATADOG_API_KEY: ((datadog_api_key))
  ATC_URL: ((atc_url))

platform: linux

run:
  path: bash
  args:
    - -c
    - curl https://app.datadoghq.com/api/v1/series?api_key=$DATADOG_API_KEY -X POST -d <%=
      {
        series: [
          {
            metric: name,
            points: [['$(date +%s)', value]],
            type: 'gauge',
            tags: ['atc_url:$ATC_URL']
          }
        ]
      }.to_json.to_json %>
